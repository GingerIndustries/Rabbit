    "version": "0.2.0",
    "configurations": [
        {
            "type": "kotlin",
            "request": "launch",
            "name": "Kotlin Launch",
            "projectRoot": "${workspaceFolder}",
            "mainClass": "community.rto.ginger.rabbit.LaunchDebugKt",
            "internalConsoleOptions": "openOnSessionStart",
            "preLaunchTask": "prepare for debugging",
        },
        {
            "type": "antlr-debug",
            "request": "launch",
            "name": "Debug Current Grammar",
            "input": "${workspaceFolder}/test.rbt",
            "visualParseTree": true,
            "grammar": "${workspaceFolder}/src/main/antlr/RabbitParser.g4"
        }
    ]
}